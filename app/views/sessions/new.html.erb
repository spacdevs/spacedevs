<div class="uk-section-default">
  <div class="uk-section uk-light uk-background-cover uk-height-viewport"
    style="background-image: url(<%= image_path('bg5.jpg') %>)">
    <div class="uk-container">
      <div class="uk-flex uk-flex-center uk-flex-middle uk-flex-column" style="height: 100%;">
        <div class="uk-width-1-1@s uk-margin-large-bottom uk-text-center" uk-grid></div>
        <%= form_with url: session_path, class: 'uk-form-stacked uk-width-1-2@m uk-background-secondary uk-padding' do |form| %>
          <div class="uk-margin">
            <label class="uk-form-label" for="registration-id">Matricula</label>
            <div class="uk-form-controls">
              <input class="uk-input" id="registration-id" type="text">
            </div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="password">Senha</label>
            <div class="uk-form-controls">
              <%= form.password_field :password, required: true, autocomplete: "current-password", class: 'uk-input', maxlength: 72 %><br>
            </div>
          </div>
          <div class="uk-margin">
            <%= button_to "Entrar", { type: 'submit' }, { class: 'uk-button uk-button-primary uk-width-1-1' } %>
          </div>
        <% end %>
        <div class="uk-margin">
          <%= link_to "Esqueci minha senha", new_password_path, class: 'uk-button uk-button-muted uk-width-1-1' %>
        </div>
      </div>
    </div>
  </div>
</div>
