<section class="uk-section">
  <div class="uk-container uk-container-small">
    <div class="uk-width-1-1@s uk-margin-large-bottom uk-text-center" uk-grid></div>
      <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
      <div class="uk-card uk-card-secondary uk-card-body">
        <p class="uk-text-warning">
          Para atualizar da senha da sua conta, preencha todos os campos conforme solicitados.
        </p>
        <%= form_with url: password_path(params[:token]), class: "uk-form-stacked", method: :put do |form| %>
          <div class="uk-margin">
            <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Digite a nova senha", maxlength: 72, class:"uk-input" %><br>
          </div>

          <div class="uk-margin">
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirme a nova senha", maxlength: 72, class:"uk-input" %><br>
          </div>
          <div class="uk-margin uk-text-center">
            <%= form.submit "Salvar", class: 'uk-button uk-button-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
