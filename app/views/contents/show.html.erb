<section class="uk-section">
  <div class="uk-container">
    <div class="uk-grid-match" uk-grid>
      <div class="uk-width-3-4@m uk-width-1-1@s">
        <% if @content.video? %>
          <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;" class="uk-text-white">
            <%= sanitize(@content.body.to_plain_text, tags: %w[div iframe], attributes: %w[src frameborder allow allowfullscreen]) %>
          </div>
        <% else %>
          <p class="uk-text-white">
            <%= sanitize(@content.body) %>
          </p>
        <% end %>
      </div>
      <div class="uk-width-1-4@m uk-width-1-1@s">
        <div class="uk-card uk-card-secondary uk-card-body">
          <ol class="uk-nav uk-nav-secondary uk-list uk-list-decimal">
            <% @content.discipline.contents.each do |content| %>
              <li>
                <%= link_to content.title, discipline_content_path(discipline_slug: @content.discipline.slug, content_slug: content.slug) %>
              </li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>

    <div class="uk-margin-top">
      <h3 class="uk-heading-line uk-text-white"><span>Materiais</span></h3>
      <ul class="uk-list  uk-list-disc uk-list-default ">
        <% if @content.discipline.resources.attached? %>

          <% @content.discipline.resources.each do |resource| %>
            <li>
              <%= link_to resource.filename, rails_blob_path(resource, disposition: 'attachment') %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</section>
